<div class="home-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <div class="site-heading">
          <h1><strong>Food Recipes<strong></h1>
              <span class="subheading">Don't visit this page when you are hungry!</span>
            </div>
          </div>
          <div class="row ml-4 ">
            <% @recipes.each do |recipe| %>
              <div class="col-lg-4 col-md-6 mb-4 mt-3">
                <div class="card h-100 mainr">
                  <%= link_to image_tag(recipe.image, class: "fit-image"), recipe_path(recipe) %>
                  <div class="card-body">
                    <h4 class="card-title">
                      <%= link_to recipe.name, recipe_path(recipe) %>
                    </h4>
                    <p>
                      <p> Instructions: <% recipe.instructions.each do |instruction| %></p>
                        <ul><%= link_to (instruction.name).truncate(70), recipe_path(recipe) %></ul>
                      <% end %>
                    </p>
                  </div>
                  <div class="card-footer">
                    <small class="text-muted"><%= "Created at: #{recipe.created_at.strftime("%d.%m.%Y, %H:%M")} | by: #{recipe.user.name}"%></small>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
