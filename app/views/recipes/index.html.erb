<div class="home-page">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <div class="site-heading">
          <h1>Food Recipes</h1>
          <span class="subheading">Don't visit this page when you are hungry!</span>
        </div>
      </div>
      <div class="row ml-4 ">
  <% @recipes.each do |recipe| %>
        <div class="col-lg-4 col-md-6 mb-4 mt-3">
  <div class="card h-100">
    <%= link_to image_tag('http://placehold.it/700x400', class: "fit-image"), recipe_path(recipe) %>
    <div class="card-body">
      <h4 class="card-title">
        <%= link_to recipe.name, recipe_path(recipe) %>
      </h4>

          <p>
             <%= (recipe.instruction.name).truncate(50) %>
        </p>
    </div>
    <div class="card-footer">
      <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
    </div>
  </div>
</div>

        <% end %>
      </div>
    </div>
  </div>
</div>
