<div class="container-fluid recimg" style="background-image: url(<%= rails_blob_url(@recipe.image) %>)">
  <div class="row">
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100 rec">
        <div class="card-body">
          <h2 class="card-title">
            <strong><%= @recipe.name %></strong>
          </h4>
          <p> Instructions: <% @recipe.instructions.each do |instruction| %></p>
            <ul><%= instruction.name %></ul>
          <% end %>
          <p class="card-text"> Ingredients:</p>
          <% @recipe.ingredients.each do |ingredient| %>
            <ul><%= ingredient.name %></ul>
          <% end %>
        </div>
        <div class="card-footer">
          <small class="text-muted"><%= "Created at: #{@recipe.created_at.strftime("%d.%m.%Y, %H:%M")} "%></small>
        </div>
      </div>
    </div>
  </div>
</div>
